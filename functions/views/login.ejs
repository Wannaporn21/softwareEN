<div class="vertical-center">
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div style="border-radius: 20px;" class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="px-2 py-2 px-sm-3 py-sm-3 px-md-5 py-md-5">
                                    <div class="text-center">
                                        <h1 class="h3 text-gray-900 mb-4">โปรเเกรมอะไร....</h1>
                                    </div>
                                    <form class="user" action="javascript:void(0)" onsubmit="loginEmail()">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="email_field" aria-describedby="emailHelp" placeholder="กรุณากรอกอีเมล์..." autofocus required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="password_field" placeholder="กรุณากรอกรหัสผ่าน..." required>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            เข้าสู่ระบบ
                                        </button>
                                        <hr>
                                        <span id="alert-respose">

                        </span>

                                    </form>

                                    <div class="text-center">
                                        <a class="small" href="#" onclick="LoadPage({typedata:'forgot'})"><b>คุณลืมรหัสผ่านใช่หรือไม่?</b></a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="#" onclick="LoadPage({typedata:'register'})"><b>สร้างบัญชีของคุณ!</b></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>